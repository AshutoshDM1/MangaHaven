generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String?
  lastName  String?
  password  String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      String   @default("user")
}

model Manga {
  id                    Int              @id @default(autoincrement())
  title                 String
  coverImageUrl         String
  description           String
  totalChapter          Int              @default(0)
  totalAvailableChapter Int              @default(0)
  genres                String[]
  mangaChapters         MangaChapter[]
  dashboards            DashboardManga[]
  carousels             CarouselManga[]
}

model MangaChapter {
  id                Int                 @id @default(autoincrement())
  chapterNumber     Int
  chapterTitle      String
  mangaId           Int
  manga             Manga               @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  mangaChapterImages MangaChapterImage[]
}

model MangaChapterImage {
  id              Int          @id @default(autoincrement())
  imageUrl        String
  mangaChapterId  Int
  mangaChapter    MangaChapter @relation(fields: [mangaChapterId], references: [id], onDelete: Cascade)
}

model MangaDashboard {
  id     Int             @id @default(autoincrement())
  name   String          @default("Main Dashboard")
  mangas DashboardManga[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model DashboardManga {
  mangaId      Int
  dashboardId  Int
  manga        Manga          @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  dashboard    MangaDashboard @relation(fields: [dashboardId], references: [id], onDelete: Cascade)
  displayOrder Int
  @@unique([mangaId, dashboardId])
}

model MangaCarousel {
  id     Int             @id @default(autoincrement())
  name   String
  mangas CarouselManga[]
}

model CarouselManga {
  id           Int           @id @default(autoincrement())
  carouselId   Int
  carousel     MangaCarousel @relation(fields: [carouselId], references: [id], onDelete: Cascade)
  mangaId      Int
  manga        Manga         @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  displayOrder Int
  @@unique([carouselId, mangaId])
}
